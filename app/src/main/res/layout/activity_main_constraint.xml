<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary">

    <!-- DO NOT MODIFY IF YOU ARE DON'T KNOW -->
    <!-- WHAT YOU ARE DOING -->

    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        style="@style/GameTitleStyle"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/role_name"
        />

    <TextView
        android:id="@+id/role_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/role_placeholder"
        style="@style/RoleNameStyle"
        app:layout_constraintTop_toBottomOf="@id/id"
        />

    <TextView
        android:id="@+id/role_team"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:text="@string/team_placeholder"
        style="@style/RoleTeamStyle"
        app:layout_constraintTop_toBottomOf="@id/role_name"
        />

    <TextView
        android:id="@+id/role_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/description_placeholder"
        style="@style/RoleDescriptionStyle"
        app:layout_constraintTop_toBottomOf="@id/role_team"
        android:minLines="2"
        />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/role_desc">
        <Button
            android:id="@+id/pick_button"
            android:layout_width="15dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/pick_button"
            style="@style/ButtonStyle"/>
        <Button
            android:id="@+id/reset_button"
            android:layout_width="15dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/reset_button"
            style="@style/ButtonStyle"/>
        <Button
            android:id="@+id/start_button"
            android:layout_width="15dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/start_button"
            style="@style/ButtonStyle"/>
    </LinearLayout>

